<section class="hero is-success">
	<div class="hero-body">
		<div class="container">
			<h1 class="title">
				新規投稿
			</h1>
		</div>
	</div>
</section>


<% if @baby.errors.any? %>
	<div class="notification is-danger">
		<h2><%= pluralize(@baby.errors.count, "error") %>　『エラーが出ています』</h2>
		<ul>
			<% @baby.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>


<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-6">
				<%= form_for @baby do |f| %>

				<div class="baby-img">
					<%= f.label :image, "写真", class: "label" %>
					<%= image_tag 'no-image.png', id: "file-preview", style: "width:100%; "%>
				</div>

				<div class="baby-new-form">
			        <%= f.attachment_field :image, id: "file_btn" %>
			    </div><br>

				<div class="field">
					<%= f.label :title, "タイトル", class: "label" %>
					<%= f.text_field :title, class: "input" %>
				</div>

				<div class="field">
					<%= f.label :body, "メッセージ・メモリー", class: "label" %>
					<%= f.text_area :body, class: "textarea" %>
				</div>

				<%= f.submit '投稿', class: "button is-success" %>
				<% end %>
			</div>
		</div>
	</div>
</section>


<!-- 画像プレビュー -->
<script type="text/javascript">
$(function() {
 function readURL(input) {
   if (input.files && input.files[0]) {
     var reader = new FileReader();
     reader.onload = function (e) {
       $('#file-preview').attr('src', e.target.result);
     }
     reader.readAsDataURL(input.files[0]);
   }
 }
 $('#file_btn').change(function(){
   readURL(this);
 });
});
</script>
