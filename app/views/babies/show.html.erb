<section class="hero is-success">
	<div class="hero-body">
		<div class="container">
			<h1 class="title">
				投稿詳細
			</h1>
		</div>
	</div>
</section>


<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-7">
				<div class="card">
					<div class="card-image">
						<figure class="image is-4by3">
							<%= attachment_image_tag @baby, :image %>
						</figure>
					</div>


					<div class="card-content">
						<div class="media">
							<div class="media-content">タイトル
								<p class="title is-3"><%= @baby.title %></p>
							</div>
							<div class="media-right">
								<p class="title is-4"></p>
								<p class="title is-4">いいね
							<% if current_user.already_favorited?(@baby) %>
								<%= link_to baby_favorites_path(@baby), method: :delete do %>
									<i class="fas fa-heart"></i>
								<% end %>
							<% else %>
								<%= link_to baby_favorites_path(@baby),method: :create do %>
									<i class="far fa-heart"></i>
								<% end %>
							<% end %>
							<%= @baby.favorites.count %>
							</div>
						</div>


						<div class="content">
							<table class="table is-narrow">
								<tr>
									<th>メッセージ・メモリー</th>
								</tr>
								<tr>
									<td><%= simple_format @baby.body %></td>
								</tr>
							</table>
							<% if @baby.user.id == current_user.id %>
								<%= link_to "編集", edit_baby_path(@baby), class: "button is-success" %>
							<% end %>
						</div>
					</div>
				</div>
			</div>


			<div class="column is-4">
				<article class="panel is-info">
					<p class="panel-heading">
						<%= @baby.user.username %>
					</p>
					<div class="panel-block">
						<p class="control">
							<%= @baby.user.profile %>
						</p>
					</div>
					<%= link_to user_path(@baby.user), class: "panel-block" do %>
					<span class="panel-icon">
						<i class="fas fa-user" aria-hidden="true"></i>
					</span>
					<%= @baby.user.username %>さんのページへ
					<% end %>
				</article>


				<article class="panel is-info">
					<p class="panel-heading">
						コメント一覧
					</p>
					<% @comments.each do |comment| %>
						<div class="panel-block">
							<p class="control">
								<%= link_to user_path(comment.user), class: "user_#{comment.user.id}" do %>
									<%= attachment_image_tag comment.user, :profile_image, fallback: "no-image.png", size: "50x50" %>
									<%= comment.user.username %>
								<% end %>
							<p class="control">
								<%= comment.comment %>
							</p>
							<% if current_user == comment.user %>
								<%= link_to '削除', baby_comment_path(@baby, comment), class: 'button is-danger', method: :delete, size: "20x20" %>
							<% end %><br>


							<!-- <div class="media-right">
								<time><%#= comment.updated_at.strftime("%m/%d %H:%M") %></time>
							</div> -->


						</div>
					<% end %>


					<div class="media">
						<div class="media-right">
							<p>コメントを書く</p>
							<%= form_for [@baby, @comment] do |f| %>
								<%= f.text_area :comment, size: "55x7" %><br>
								<%= f.submit '送信', class: "button is-primary" %><br>
							<% end %>
						</div>
					</div>
				</article>
			</div>
		</div>
	</div>
</section>

