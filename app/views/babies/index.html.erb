<section class="hero is-success">
	<div class="hero-body">
		<div class="container">
			<h1 class="title">
				すべての投稿一覧
			</h1>
		</div>
	</div>
</section>


<section class="section">
	<div class="container">
		<div class="columns is-multiline">
			<% @babies.each do |baby| %>
				<div class="column is-4">
					<div class="card">
						<div class=card-image>
							<figure class="image is-4by3">
								<%= link_to baby_path(baby) do %>
									<%= attachment_image_tag baby, :image %>
								<% end %>
							</figure>
						</div>
						<div class="card-content">
							<div class="media">
								<div class="media-left">
									<figure class="image is-48x48">
										<%= link_to user_path(baby.user.id) do %>
											<%= attachment_image_tag baby.user, :profile_image, fallback: "no-image.png" %>
										<% end %>
									</figure>
								</div>

								<div class="media-content">
									<div class="title"><%= link_to baby.user.username, user_path(baby.user.id) %></div>
								</div>
								<!-- AI -->
								      <% baby.tags.each do |tag| %>
								        <div class="label"><%= tag.name %></div>
								      <% end %>
								<!-- AI -->
							</div>
							<% if current_user %>


							<div class="media">
								<div class="media-content">
									<i class="far fa-heart"></i> いいね
									<%= baby.favorites.count %> 件
								</div>


								<div class="media-right">
									<time><%= baby.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
								</div>
							</div>
							<% end %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</section>